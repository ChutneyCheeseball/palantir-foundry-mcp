{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"],
      "@handlers/*": ["src/handlers/*"],
      "@tools/*": ["src/tools/*"],
      "@types": ["src/types.ts"],
      "@utils": ["src/utils.ts"]
    }
  },
  "include": ["src"]
}
